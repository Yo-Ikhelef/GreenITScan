APP_SECRET=changeme
DATABASE_URL=mysql://root:password@database:3306/dbname?charset=utf8mb4
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=changeme
JWT_PRIVATE_KEY_B64=replace_with_base64
JWT_PUBLIC_KEY_B64=replace_with_base64
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=dbname

# Pour démarrer en lisant .env.prod.local
docker compose --env-file .env.prod.local -f docker-compose.prod.local.yml up -d --build

# Vérifier que l’app voit les bonnes valeurs
docker compose --env-file .env.prod.local -f docker-compose.prod.local.yml exec -T backend \
    sh -lc 'printenv | egrep "APP_|DATABASE_URL|JWT_|MYSQL_"'
